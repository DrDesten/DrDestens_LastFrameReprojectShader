screen.DEPTH_OF_FIELD=Depth Of Field

option.DOF_MODE=DoF Type
option.DOF_MODE.comment=Blurs non-focussed objects, like a real camera. Adaptive Bokeh changes the quality based on the blur amount (usually better performance).
value.DOF_MODE.0=Off
value.DOF_MODE.2=Box
value.DOF_MODE.3=Bokeh
value.DOF_MODE.4=Adaptive Bokeh

option.DOF_STEPS=DoF Quality
option.DOF_STEPS.comment=Step size of the box blurs. Significantly influences performance.
value.DOF_STEPS.1=Pixel Perfect

option.DOF_MAXSIZE=Maximum Blur
option.DOF_MAXSIZE.comment=Limits the size of the DoF blur. Hides artifacts when using lower quality blur.
value.DOF_MAXSIZE.0.002=Low
value.DOF_MAXSIZE.0.005=Medium
value.DOF_MAXSIZE.0.007=High
value.DOF_MAXSIZE.0.01=Highest
value.DOF_MAXSIZE.1.0=Unlimited

option.DOF_STRENGTH=DoF Intensity
option.DOF_STRENGTH.comment=Intensity of the Depth of Field effect. Low Performance impact. Lower = faster.

option.DOF_RANDOMIZE=Jitter Samples
value.DOF_RANDOMIZE.0=Off
value.DOF_RANDOMIZE.1=On

option.DOF_RANDOMIZE_AMOUNT=Jitter Amount
option.DOF_RANDOMIZE_AMOUNT.comment=Amount of randomization applied to the DoF effect.

option.DOF_DOWNSAMPLING=DoF Downsampling Amount
option.DOF_DOWNSAMPLING.comment=Amount of Downsampling that takes place for the Depth of Field effect. Does not affect performance. Reduces DoF artifacts, can create pixelation artifacts.

option.DOF_KERNEL_SIZE=Bokeh Quality
option.DOF_KERNEL_SIZE.comment=Significantly affects performance.
value.DOF_KERNEL_SIZE.1=Low
value.DOF_KERNEL_SIZE.2=Medium
value.DOF_KERNEL_SIZE.3=High
value.DOF_KERNEL_SIZE.4=Highest


